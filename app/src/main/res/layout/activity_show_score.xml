<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="silica.landtanin.ishihara.ShowScoreActivity"
    android:background="@drawable/bg25">

    <TextView android:text="Show Score" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showScore"
        android:textSize="@dimen/h1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textblack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/10"
        android:id="@+id/txtShowScore"
        android:layout_centerInParent="true"
        android:textSize="110dp"
        android:textColor="@color/textblack" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:onClick="clickPlay"
            android:id="@+id/button"
            android:layout_weight="0.5"
            android:textColor="@color/textblack" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:onClick="clickExit"
            android:id="@+id/button2"
            android:layout_weight="0.5"
            android:textColor="@color/textblack" />
    </LinearLayout>

</RelativeLayout>
